
generator client{
    provider = "prisma-client-js"
}
datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}
model User {
    id        String   @id @default(uuid())
    username String @unique
    email     String @unique
    password String
    confirmed Boolean
    wallet Wallet?
    transaction Transaction[]
}
model Wallet{
    id       String   @id @default(uuid())
    balance Float
    currency String
    user User @relation(fields:[userid],references: [id],onDelete:Cascade,onUpdate:Cascade)
    userid String @unique
}
model Transaction{
    id String @id @default(uuid())
    amount Int
    timestamp DateTime
    user User @relation(fields: [userid],references: [id],onDelete:Cascade,onUpdate:Cascade)
    userid String 
    receipient String
}